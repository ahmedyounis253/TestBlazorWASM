@page "/employees"


<h3>Employees</h3>
<div class=" row p-0">
    <div class="col col-5">
<button @onclick="AddEmployee" class="btn btn-primary align-self-end">add Employee</button>

    </div>
    <div class="col col-4">
<input type="text" class="form-control ml-6" @bind-value="searchText"/>

    </div>    
    <div class="col col-1">
        
<button class="btn btn-primary  " @onclick="Search">search</button>
        
    </div>

</div>
<table class="table table-borderless table-responsive-xl table-striped">
    <thead>
        <tr>
        <th class='col-2'>Employee ID </th>
        <th>Name</th>
        <th>Role</th>
        <th>Moblie</th>
        <th>Birthdate</th>
        <th>age</th>
        <th></th>
        </tr>
    </thead>
        
    <tbody>
        @if (employees == null)
        {
            <P>loading</P>
        }
        else if (employees.Count == 0)
        {
            <p> No Students Found</p>
        }
        else{
        foreach( Employee employee in employees)
        {
            <tr>
            <td> @employee.EmployeeID </td>
            <td> @employee.Name </td>
            <td> @employee.Role</td>
            <td>@employee.Mobile</td>
           <td>
            @if(employee.Birthdate!=null){
             @employee.Birthdate.Value.ToShortDateString()
            }
            </td>
             <td>@employee.Age</td>
             <td>
                 <button class="btn btn-danger" @onclick="()=>Delete(employee.Id)">Delete</button>
                 <button class="btn btn-secondary" @onclick="()=>Update(employee.Id)">Update</button>
             
             </td>
               
            

        </tr>
        }
        }
    </tbody>
</table>


